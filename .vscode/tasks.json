{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "restore-and-build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/ffxiv_api/ffxiv_api.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["restore"]
    },
    {
      "label": "restore",
      "command": "dotnet",
      "type": "process",
      "args": [
        "restore",
        "${workspaceFolder}/ffxiv_api/ffxiv_api.csproj"
      ],
      "problemMatcher": []
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/ffxiv_api/ffxiv_api.csproj"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
}
